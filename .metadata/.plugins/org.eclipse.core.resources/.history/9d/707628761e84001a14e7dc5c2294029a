package com.aeox.jkaiser.dto;

import java.util.LinkedList;
import java.util.List;

import lombok.Data;

@Data
public abstract class Job {
	private String name;
	private String version;
	private TaskTreeNode entrypoint;
	private Status status;
	
	public <P,R> List<Result<?>> run(final JobContext<?> context) {
		final List<Result<?>> results = new LinkedList<>();
		
		Task<?,?> taskToExecute = this.entrypoint.getTaskId();	
		while(taskToExecute != null) {
			final Result<?> result = taskToExecute.run(context);
		}
		
		return null;		
	}
}
